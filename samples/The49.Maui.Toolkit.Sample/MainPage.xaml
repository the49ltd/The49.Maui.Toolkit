<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
             x:Class="The49.Maui.Toolkit.Sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Text="@NuthinButNet 💯! Hello there is more">
                <Entry.Behaviors>
                    <the49:MentionsBehavior>
                        <the49:MentionsBehavior.MentionSpanTemplate>
                            <DataTemplate>
                                <Span Text="{Binding .}" TextColor="DarkBlue" />
                            </DataTemplate>
                        </the49:MentionsBehavior.MentionSpanTemplate>
                    </the49:MentionsBehavior>
                </Entry.Behaviors>
            </Entry>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
